---
import { Image } from 'astro:assets';
import aboutUsHero from '@assets/images/about-us/about-us-hero.png';
---

<script>
	import { gsap } from 'gsap';
	import { TextPlugin } from 'gsap/TextPlugin';
	gsap.registerPlugin(TextPlugin);

	const tl = gsap.timeline();

	gsap.to('#about-us-title', {
		text: 'Building Digital Presence',
		duration: 2,
		delay: 0.3,
	});
	gsap.fromTo(
		'#about-us-hero',
		{
			opacity: 0,
			duration: 1.3,
			delay: 0.5,
			xPercent: 100,
			ease: 'power3.out',
		},
		{
			opacity: 1,
			xPercent: 0,
			duration: 1.3,
			ease: 'power3.out',
			autoAlpha: 1,
		}
	);
</script>

<section
	id='card'
	class='bg-primary h-[100vh] min-h-full overflow-hidden 2xl:min-h-[883px]'>
	<div
		class='container flex flex-col h-full items-center justify-center mx-auto pt-20 px-[20px] md:flex-row 2xl:pt-32'>
		<h1
			id='target'
			class='title relative'>
			<span
				id='about-us-title'
				class='absolute font-bold font-display text-[38px] text-white lg:leading-[95px] lg:text-7xl 2xl:text-[91px]'>
			</span>
			<span
				class='block font-bold font-display invisible text-[38px] text-white lg:leading-[95px] lg:text-7xl 2xl:text-[91px]'>
				Building Digital Presence
			</span>
		</h1>
		<Image
			loading='eager'
			widths={[240, 320, 320, 920, aboutUsHero.width]}
			sizes={`(max-width: 360px) 240px, (max-width: 720px) 320px, (max-width: 1024px) 480px, (max-width: 1600px) 720px, ${aboutUsHero.width}px`}
			src={aboutUsHero}
			alt='About Us'
			class='invisible -translate-x-[8%] md:translate-x-0 xl:translate-x-[10%] xl:!w-[140%]'
			id='about-us-hero'
		/>
	</div>
</section>
