---
import '@styles/global.css';
import { Image } from 'astro:assets';
import aboutUsHero from '@assets/images/about-us-hero.png';
---

<script>
	import { gsap } from 'gsap';
	import { TextPlugin } from 'gsap/TextPlugin';
	gsap.registerPlugin(TextPlugin);
</script>

<section
	id='card'
	class='bg-primary h-[100vh] min-h-full overflow-hidden 2xl:min-h-[883px]'>
	<div
		class='container flex h-full items-center justify-center mx-auto px-[20px]'>
		<h1
			class='font-bold font-display leading-[95px] text-7xl text-white 2xltext-[91px]'>
			Building Digital Presence
		</h1>
		<Image
			loading='eager'
			widths={[240, 320, 710, aboutUsHero.width]}
			sizes={`(max-width: 360px) 240px, (max-width: 720px) 320px, (max-width: 1600px) 710px, ${aboutUsHero.width}px`}
			src={aboutUsHero}
			alt='About Us'
			class='translaten-x-[10%] !w-[140%]'
		/>
	</div>
</section>
