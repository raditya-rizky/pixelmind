---
import { Icon } from 'astro-icon/components';
import InvertedRadCard from '@components/inverted-rad-card.astro';
---

<section
	id='card'
	class='bg-secondary min-h-auto -mt-16 pb-[100px] relative rounded-se-[100px] rounded-ss-[100px]'>
	<div class='mx-auto px-[120px] py-[100px]'>
		<h5
			class='font-bold font-display mb-20 text-[32px] text-white 2xl:text-[40px]'>
			We are the first call for every outrageous, unthinkable and
			unknown possibility in the field of digitally immersive experiences — all
			with highly competitive rates.
		</h5>

		<div
			class='divide-background divide-x font-bold font-display grid grid-cols-4 text-white'>
			{
				Array.from({ length: 4 }).map((item) => (
					<div class='flex flex-col items-center justify-center'>
						<span class='text-[72px] 2xl:text-[91px]'>45+</span>
						<span class='text-[32px] 2xl:text-[40px]'>clients</span>
					</div>
				))
			}
		</div>
	</div>
</section>
