---
import { Image } from 'astro:assets';
import firstImage from '@assets/images/contact-us/image-1.png';
import secondImage from '@assets/images/contact-us/image-2.png';
---

<script>
	import { gsap } from 'gsap';
	import { TextPlugin } from 'gsap/TextPlugin';
	gsap.registerPlugin(TextPlugin);
	const tl = gsap.timeline();

	tl.fromTo(
		'#line-1',
		{
			opacity: 0,
			duration: 1.3,
			xPercent: -50,
			ease: 'power3.out',
		},
		{
			opacity: 1,
			xPercent: 0,
			duration: 1.3,
			ease: 'power3.out',
			autoAlpha: 1,
		}
	);

	tl.fromTo(
		'#line-2',
		{
			opacity: 0,
			duration: 1.3,
			xPercent: 100,
			ease: 'power3.out',
		},
		{
			opacity: 1,
			xPercent: 0,
			duration: 1.3,
			ease: 'power3.out',
			autoAlpha: 1,
		}
	);

	tl.to('#together', {
		text: 'Together',
		duration: 0.7,
	});
</script>

<section
	id='card'
	class='bg-primary h-[100vh] min-h-full overflow-hidden 2xl:min-h-[883px]'>
	<div
		class='flex flex-col font-display h-full justify-center max-w-[340px] mx-auto px-8 space-y-4 md:max-w-[480px] lg:max-w-[620px] lg:pt-18 lg:px-0 lg:space-y-0 2xl:max-w-[760px]'>
		<div
			id='line-1'
			class='flex invisible items-center justify-between'>
			<h1
				class='font-bold font-display text-[28px] text-white md:text-4xl lg:leading-[95px] lg:text-7xl 2xl:text-[91px]'>
				Let's
			</h1>
			<Image
				loading='eager'
				widths={[100, 120, 300, 337, firstImage.width]}
				sizes={`(max-width: 360px) 100px, (max-width: 720px) 120px, (max-width: 1024px) 300px, (max-width: 1600px) 337px, ${firstImage.width}px`}
				src={firstImage}
				alt='Illustration 1'
				class='max-w-[140px] rounded-[20px] w-full md:max-w-[240px] 2xl:max-w-[280px]'
			/>
		</div>

		<div
			id='line-2'
			class='flex invisible flex-row-reverse items-center justify-between'>
			<h1
				class='font-bold font-display text-[28px] text-white md:text-4xl lg:leading-[95px] lg:text-7xl 2xl:text-[91px]'>
				Work
			</h1>
			<Image
				loading='eager'
				widths={[100, 120, 300, 337, secondImage.width]}
				sizes={`(max-width: 360px) 100px, (max-width: 720px) 120px, (max-width: 1024px) 300px, (max-width: 1600px) 337px, ${secondImage.width}px`}
				src={secondImage}
				alt='Illustration 2'
				class='max-w-[140px] rounded-[20px] w-full md:max-w-[240px] 2xl:max-w-[280px]'
			/>
		</div>

		<div class='relative w-full'>
			<h1
				id='together'
				class='absolute font-bold font-display text-[28px] text-center text-white md:pt-6 md:text-4xl lg:leading-[95px] lg:pt-8 lg:text-7xl lg:text-left 2xl:text-[91px]'>
			</h1>
			<h1
				class='font-bold font-display invisible text-[28px] text-center text-white md:pt-6 md:text-4xl lg:leading-[95px] lg:pt-8 lg:text-7xl lg:text-left 2xl:text-[91px]'>
				Together
			</h1>
		</div>
	</div>
</section>
