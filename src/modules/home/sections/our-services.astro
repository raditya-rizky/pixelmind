---
import { Icon } from 'astro-icon/components';
import InvertedRadCard from '@components/inverted-rad-card.astro';

const services = [
	{
		title: 'Strategy and Design',
		icon: 'arrow-right',
		list: ['Logo Design', 'Branding', 'Web Design', 'Mobile App Design'],
		image: '/hero-background.png',
	},
	{
		title: 'Coding and Implementation',
		icon: 'arrow-right',
		list: [
			'Website Development',
			'Web Application Development',
			'Mobile App Development',
			'E-Commerce',
		],
		image: '/hero-background.png',
	},
	{
		title: 'Growth and Marketing',
		icon: 'arrow-right',
		list: [
			'SEO',
			'Social Media Marketing',
			'Email Marketing',
			'Web Based Advertising',
		],
		image: '/hero-background.png',
	},
];
---

<section
	id='card'
	class='bg-primary min-h-auto -mt-24 pb-[100px] relative rounded-se-[100px] rounded-ss-[100px]'>
	<div class='mx-auto px-[120px] py-[100px]'>
		<h3
			id='target'
			class='font-[700] font-display text-[53px] text-white w-fit'>
			<span>Our</span>
			<span class="block after:text-accent after:content-['.']">
				Services
			</span>
		</h3>

		<div class='gap-8 grid grid-cols-3 mt-20'>
			{
				services.map((service) => (
					<div id='services'>
						<InvertedRadCard
							tiltEffect
							ctaHeight='60px'
							ctaWidth='80px'
							innerRadius={36}>
							<div class='backdrop-blur-lg bg-white/10 relative z-20'>
								<div class='flex flex-col gap-6 p-8'>
									<div class='flex items-center justify-between'>
										<p class='font-[700] max-w-[212px] text-2xl text-white'>
											{service.title}
										</p>
										<svg
											width='48'
											height='48'
											viewBox='0 0 48 48'
											fill='none'
											xmlns='http://www.w3.org/2000/svg'>
