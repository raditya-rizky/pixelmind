---
interface Props {
	buttonPosition?: 'center' | 'left';
}

const { buttonPosition = 'center' } = Astro.props;
---

<form action='/'>
	<div class='gap-x-6 gap-y-8 grid grid-cols-1 lg:gap-y-20 lg:grid-cols-2'>
		<div class='md:col-span-1 relative'>
			<input
				type='text'
				id='firstName'
				name='firstName'
				class='block border-b border-white mt-1 pl-2 py-4 text-white w-full focus:outline-none focus:ring-0 placeholder:text-white'
				placeholder='First Name *'
			/>
		</div>
		<div class='lg:col-span-1 relative'>
			<input
				type='text'
				id='lastName'
				name='lastName'
				class='block border-b border-white mt-1 pl-2 py-4 text-white w-full focus:outline-none focus:ring-0 placeholder:text-white'
				placeholder='Last Name *'
			/>
		</div>
		<div class='lg:col-span-1 relative'>
			<input
				type='text'
				id='email'
				name='email'
				class='block border-b border-white mt-1 pl-2 py-4 text-white w-full focus:outline-none focus:ring-0 placeholder:text-white'
				placeholder='Email Address *'
			/>
		</div>
		<div class='lg:col-span-1 relative'>
			<input
				type='text'
				id='companyName'
				name='companyName'
				class='block border-b border-white mt-1 pl-2 py-4 text-white w-full focus:outline-none focus:ring-0 placeholder:text-white'
				placeholder='Company Name *'
			/>
		</div>

		<div class='lg:col-span-2 relative'>
			<textarea
				id='message'
				name='message'
				rows={2}
				class='block border-b border-white mt-1 pl-2 py-4 text-white w-full focus:outline-none focus:ring-0 placeholder:text-white'
				placeholder='Message *'
			></textarea>
		</div>
	</div>

	<div
		class={`mt-[94px] text-center ${buttonPosition === 'center' ? 'lg:text-center' : 'lg:text-left'}`}>
		<button
			type='submit'
			class='bg-white cursor-pointer duration-300 mx-auto py-[14px] px-[60px] relative rounded-full w-fit z-10 hover:bg-white/80'>
			Let's Connect
		</button>
	</div>
</form>
